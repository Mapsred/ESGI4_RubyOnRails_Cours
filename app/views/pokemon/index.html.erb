<h1>Liste des pokemons</h1>

<% if @pokemons.any? %>
  <table class="table">
    <thead>
    <tr>
      <th>ID</th>
      <th>Nom</th>
    </tr>
    </thead>
    <tbody>
    <% @pokemons.each do |pokemon| %>
      <tr>
        <td><%= pokemon.id %></td>
        <td><%= pokemon.name %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <p>Il n'y a aucun pok√©mon</p>
<% end %>