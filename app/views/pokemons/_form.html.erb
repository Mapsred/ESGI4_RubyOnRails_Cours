<%= simple_form_for(@pokemon) do |form| %>
  <div class="row">
    <div class="form-group col-lg-5">
      <%= form.input :name, label: 'Nom', class: 'form-control' %>
    </div>

    <div class="form-group col-lg-5">
      <%= form.input :number, label: 'NumÃ©ro', class: 'form-control' %>
    </div>

    <div class="form-group col-lg-5">
      <%= form.input :level, label: 'Niveau', class: 'form-control' %>
    </div>

    <div class="form-group col-lg-5">
      <%= form.input :health_points, label: 'Points de vie', class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-lg-6">
      <%= form.association :type, label: 'Type', class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-lg-6">
      <%= form.association :moves, as: :check_boxes, label: 'Attaques', class: 'form-control' %>
    </div>
  </div>

  <%= form.submit 'Enregistrer', class: 'btn btn-primary' %>
<% end %>

